[mysqld]
# Log output to file
log_output=FILE
# Error log
log_error=/var/log/mysql/mysql.log
# Minimum time (in seconds) for query to be considered slow
long_query_time=10
# Log every n slow queries (1 = all)
log_slow_rate_limit=1
# Enable the slow query log
slow_query_log=1
# Slow query log
slow_query_log_file=/var/log/mysql/mariadb-slow.log

